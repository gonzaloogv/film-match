# ============================================
# PRODUCCIÓN - Variables de entorno para deploy
# ============================================

# Backend API Configuration
VITE_API_BASE_URL=https://film-match-backend.onrender.com/api
VITE_API_TIMEOUT=30000

# Google OAuth Configuration (Opcional - login con email/password disponible)
VITE_GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID
VITE_GOOGLE_REDIRECT_URI=https://film-match-two.vercel.app/auth/callback

# Feature Flags
VITE_ENABLE_RAG_CHAT=true
VITE_ENABLE_SEMANTIC_SEARCH=true

# Cache Configuration (Más agresivo en producción)
VITE_CACHE_TTL=600000
VITE_CACHE_MAX_SIZE=200

# Logging (Desactivado en producción)
VITE_DEBUG_MODE=false
